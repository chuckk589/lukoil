    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/swagger": "^7.4.2",
    "bcrypt": "^5.0.1",
    "bullmq": "^5.8.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "grammy": "^1.30.0",
    "joi": "^17.11.0",
    "luxon": "^3.0.1",
    "passport": "^0.6.0",
